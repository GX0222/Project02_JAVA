package tw.labs.lab01;

import java.util.Scanner;

public class class_9981_02 {

	public static void main(String[] args) {
		for (;;) {
			System.out.println("請輸入3或4:");
			Scanner scanner = new Scanner(System.in);
			int a = scanner.nextInt();
			switch (a) {
			case 3:
				input3(a);
				break;
			case 4:
				input4();
				break;
			default:
				System.out.println("請輸入3或4!!!!");
				break;
			}
		}
	}

	static void input3(int y) {
		System.out.println("===============================");
		for (int x = 1; x <= 9; x ++) {
			for (int i = 1; i <= 3; i++) {
				System.out.printf("|  ");
				System.out.printf("%d x %d = %2d\t", i, x, (i * x));
				System.out.printf("|  ");
			}
			System.out.println();
		}
	}

	static void input4() {
		System.out.println("===================================");
		for (int i = 2; i <= 6; i += 4) {
			for (int x = 1; x <= 9; x++) {
				System.out.printf("|  ");
				System.out.printf("%d x %d = %2d  ", i, x, (i * x));
				System.out.printf("%d x %d = %2d  ", i + 1, x, ((i + 1) * x));
				System.out.printf("|  ");
				System.out.printf("%d x %d = %2d  ", i + 2, x, ((i + 2) * x));
				System.out.printf("|  ");
				System.out.printf("%d x %d = %2d  ", i + 3, x, ((i + 3) * x));
				System.out.println("|");

			}
			System.out.println("===================================");
		}
	}

}
