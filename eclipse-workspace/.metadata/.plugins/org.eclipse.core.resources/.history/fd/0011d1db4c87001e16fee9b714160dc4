package tw.labs.lab01;

public class class10 {
	public static void main(String[] args) {
		// 用陣列計算，骰100次骰子的點數次數
		int [] p = new int [7];
		for (int i = 1; i <= 100; i++) {
			int roll = (int) (Math.random() * 6 + 1);
			if (roll == 0 ||roll>6) {
				p[0]++;
			}
			else {
				p[roll]++;
			}
			
		}
		System.out.printf("1:%d, 2:%d, 3:%d, 4:%d, 5:%d, 6:%d, err:%d", p1, p2, p3, p4, p5, p6, p0);
	}
}
