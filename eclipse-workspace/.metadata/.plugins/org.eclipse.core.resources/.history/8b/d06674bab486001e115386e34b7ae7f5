package tw.labs.lab01;

public class class_9981 {

	public static void main(String[] args) {
		input3();
	}

	static void input3() {
		for (int i = 1; i <= 7; i += 3) {
			for (int x = 1; x <= 9; x++) {
				System.out.printf("|  ");
				System.out.printf("%d x %d = %d  ", i, x, (i * x));
				System.out.printf("%d x %d = %d  ", i + 1, x, ((i + 1) * x));
				System.out.printf("%d x %d = %d  ", i + 2, x, ((i + 2) * x));
				System.out.println("|");

			}
			System.out.println("===========================");
		}
	}

	//
}
