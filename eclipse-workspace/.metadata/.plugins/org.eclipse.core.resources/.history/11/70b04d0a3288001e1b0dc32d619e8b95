package tw.lab.classes;

public class TWid {
	private String id;

	public static boolean isRightID(String id) {
		// 1. length = 10
		// 2. 1=> A-Z
		// 3. 2=> 1 or 2
		// 4. 3 ~ 10 => 0 ~ 9
		String letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
		boolean isRight = false;
		if (id.length() == 10) {
			if (letters.indexOf(id.charAt(0)) >= 0) {
				if (id.charAt(1) == 1 || id.charAt(1) == 2) {
					for(int i=2;i<=9;i++) {
//						if (id.charAt(i))
					}
				}
			}
		}
		return true;
	}

}
