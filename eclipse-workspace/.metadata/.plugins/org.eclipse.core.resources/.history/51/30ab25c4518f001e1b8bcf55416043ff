package tw.lab.classes;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;

import javax.swing.JPanel;

public class PacManMap_v1 extends JPanel {
	
	private int uniLong = 50;
	
	//建構式
	public PacManMap_v1() {
		
	}
	
	//畫布
	protected void paintComponent(Graphics g) {
		Graphics2D g2d = (Graphics2D)g;
		g2d.setColor(Color.BLUE);
		
		int startx,starty,startx2,starty2,width,endx,endy;
		
		for (int i =0 ;i<1;i++) {
			startx = uniLong*(int)(Math.random()*15+1);
			starty = uniLong*(int)(Math.random()*15+1);
			startx2 = uniLong*(int)(Math.random()*15+1);
			starty2 = uniLong*(int)(Math.random()*15+1);
			endx = uniLong*(int)(Math.random()*15+1);
			endy = uniLong*(int)(Math.random()*15+1);
			width = (int)(Math.random()*8+1);
//			g2d.fillRoundRect(uniLong*startx, uniLong*starty, uniLong, uniLong*width,0,0);
//			g2d.fillRoundRect(uniLong*startx2, uniLong*starty2, uniLong*width, uniLong,0,0);
			g2d.drawLine(startx, starty, endx, starty);
			g2d.drawLine(startx2, starty2, startx2, endy);
			System.out.println(startx+";"+endx);
			System.out.println(Math.abs(startx-endx));
			for(int i2=0;i2<Math.abs(startx-endx);i++) {
				System.out.print(startx+i);
			}
		}
		
		
	}
	
	//內部類別
	class mapBlock{
		int x;int y;int type=0;
	}
}

